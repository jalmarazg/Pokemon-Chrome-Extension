{
  "name": "Extension Sidebar",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
  },
  "content_scripts" : [
    {
      "matches": [ "<all_urls>" ],
      "css": ["/static/css/app.css", "/static/css/content.css"],
      "js": ["/static/js/content.js"]
    }
  ], 
  "background": {
    "scripts": ["app/background.js"]
  }
}